@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

.actions
	position absolute
	bottom 0

.author
	color gris_claro

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	color gris_oscuro
	left 0.5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto

.center-text
	text-align center

.container
	font-size 0
	padding 1.4rem
	text-align center

.header
	height 3.5em

	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.menu
	display none

.name
	color gris_oscuro

.playing
	&.small
		width 20em

.relative
	position relative

.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8em
	&:nth-child(even)
		margin-right 0

	p
		margin 0.5em 0

