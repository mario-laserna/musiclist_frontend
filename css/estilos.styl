@import "nib"
@import "normalize.styl"
@import "fonts.styl"


gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_masclaro = #F0F0F0

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

img
	vertical-align top

ul
	margin 0
	padding 0

.actions
	background rgba(black,0.3)
	bottom 0
	left 0
	position absolute
	right 0

.action
	color white
	font-size 1.2em
	margin-right 0.5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro

.author
	color gris_claro

.avatar
	height 38px
	width 38px

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	color gris_oscuro
	left 0.5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto

.center-text
	text-align center

.container
	font-size 0
	padding 1.4rem
	text-align center

.close-icon
	color gris_claro
	font-size 1.2em
	position absolute
	right 0.5em
	top 0.5em

.header
	height 3.5em

	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em

.isotipo
	width 122px;

.left
	float left

.logo
	background white
	display none
	overflow hidden
	padding 1.3em 0
	
.menu
	display none

.name
	color gris_oscuro

.padding
	padding 1em

.padding-tb
	padding 1em 0

.playing
	&.small
		margin 0 auto
		width 20em

.playlist
	border-left 1px solid gris_claro
	display none;
	padding 0 2em
	width 25em
	.action 
		font-size 0.8em
	.item
		padding 1em 0
	.list
		list-style none

.progress
	margin 1em 0
	position relative

	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite
	.min
	.max
		font-size 0.8em
		position absolute
		top -5px
	
	.min
		left 0
	
	.max
		right 0
	
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
		animation 10s state infinite linear

	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%

@keyframes state
	0%
		width 0
	100%
		opacity 0
		width 100%

@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)

.relative
	position relative

.right
	float right

.right-text
	text-align right

.round
	border-radius 50%
	overflow hidden

.search-icon
	position absolute
	color gris_claro
	left 0.5em
	top 0.8em

.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8em
	&:nth-child(even)
		margin-right 0

	p
		margin 0.5em 0

.username
	color gris_claro
	margin-left 0.5em
	position relative
	top 9px
	&:after
		content ""
		border-left 7px solid transparent
		border-top 9px solid gris_claro
		border-right 7px solid transparent
		display inline-block
		margin-left 0.4em

.wrap
	width 1000px

@media screen and (min-width:480px)
	.image
		img
			width 100%
			height auto

	.playing
		&.medium
			width auto

	.song
		&:nth-child(even)
			margin-right 1em

@media screen and (min-width:1000px)
	body
		background gris_masclaro

	.button-menu
		display none

	.header
		border none;
		height auto
		.title
			display none

	.logo
		display block;

	.menu
		background gris_masclaro
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro

	.music
		float left
		width 32.5em
		.description
			display none

	.playing
		padding-top 2em
		&.large
			margin 0 auto
			overflow hidden
			width 62.5em

	.playlist
		display block;	