@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

img
	vertical-align top

.actions
	background rgba(black,0.3)
	bottom 0
	left 0
	position absolute
	right 0

.action
	color white
	font-size 1.2em
	margin-right 0.5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro

.author
	color gris_claro

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	color gris_oscuro
	left 0.5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto

.center-text
	text-align center

.container
	font-size 0
	padding 1.4rem
	text-align center

.header
	height 3.5em

	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.menu
	display none

.name
	color gris_oscuro

.padding
	padding 1em

.padding-tb
	padding 1em 0

.playing
	&.small
		width 20em

.progress
	margin 1em 0
	position relative

	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
	.min
	.max
		font-size 0.8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%

.relative
	position relative

.right-text
	text-align right

.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8em
	&:nth-child(even)
		margin-right 0

	p
		margin 0.5em 0

@media screen and (min-width:480px)
	.image
		img
			width 100%
			height auto

	.playing
		&.medium
			width auto

	.song
		&:nth-child(even)
			margin-right 1em

@media screen and (min-width:1000px)
	body
		background red